<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:minHeight="80dp"
            card_view:cardBackgroundColor="#FFF"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:layout_alignParentLeft="true">

                <View
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary" />

                <RelativeLayout
                    android:id="@+id/tgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                        <TextView
                            android:id="@+id/customer_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Widi Ramadhan"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/contract_id"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customer_name"
                            android:text="12345678"
                            android:textColor="#AAA" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/customer_name"
                            android:layout_alignTop="@+id/customer_name"
                            card_view:srcCompat="@drawable/circle_danger"
                            android:layout_alignRight="@+id/customer_name" />

                        <TextView
                            android:id="@+id/tanggal_jatuh_tempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/customer_name"
                            android:layout_alignRight="@+id/customer_name"
                            android:layout_below="@+id/contract_id"
                            android:text="07/02/2019"
                            android:textColor="#AAA" />

                        <TextView
                            android:id="@+id/total_tagihan"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/contract_id"
                            android:layout_toEndOf="@+id/rp"
                            android:text="1.080.000"
                            android:textColor="#AAA"
                            android:layout_toRightOf="@+id/rp" />

                        <TextView
                            android:id="@+id/rp"
                            android:layout_width="22dp"
                            android:layout_height="20dp"
                            android:layout_alignStart="@+id/customer_name"
                            android:layout_below="@+id/contract_id"
                            android:text="Rp."
                            android:textColor="@color/colorPrimary"
                            android:layout_alignLeft="@+id/customer_name" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/contract_id"
                            android:layout_toEndOf="@+id/total_tagihan"
                            android:text="  |  "
                            android:textColor="@color/colorPrimary"
                            android:layout_toRightOf="@+id/total_tagihan" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="13dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/contract_id"
                            android:layout_toEndOf="@+id/textView5"
                            android:layout_toRightOf="@+id/textView5"
                            card_view:srcCompat="@drawable/location" />

                        <TextView
                            android:id="@+id/jarak"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/contract_id"
                            android:layout_toEndOf="@+id/imageView4"
                            android:text="1.7 KM"
                            android:textColor="#AAA"
                            android:layout_toRightOf="@+id/imageView4" />

                        <TextView
                            android:id="@+id/od"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/rp"
                            android:text="Keterlambatan selama 0 Hari"
                            android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>